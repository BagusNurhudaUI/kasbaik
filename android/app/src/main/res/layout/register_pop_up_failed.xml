<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/orange">

    <ImageView
        android:id="@+id/iv_icon_failed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/failed"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register gagal"
        android:layout_marginTop="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_failed"
        app:layout_constraintEnd_toEndOf="@+id/iv_icon_failed"
        app:layout_constraintStart_toStartOf="@+id/iv_icon_failed" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan Error"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_failed"
        app:layout_constraintStart_toStartOf="@+id/tv_failed"
        app:layout_constraintTop_toBottomOf="@+id/tv_failed" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Retry"
        android:textColor="@color/orange"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_failed"
        app:layout_constraintStart_toStartOf="@+id/tv_failed"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_message" />





